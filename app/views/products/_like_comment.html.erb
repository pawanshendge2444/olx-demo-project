<% like = Like.find_by(user_id: current_user.id , likeable_id: comment.id, likeable_type: "Comment")%>
   <br><strong>Total Likes:</strong>&nbsp;
   <%= comment.likes.count %> 
   <%if like.nil? %>
      <%= button_to "like", likes_path, params: {like: {likeable_id: comment.id, likeable_type: "Comment", user_id: current_user.id }}, method: :post %>
   <% else %>
      <%= button_to "UnLike", like_path(like), method: :delete %>
   <%end %>
